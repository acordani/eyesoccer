<%= form_tag search_path, method: :get do %>
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<%= text_field_tag :starts_at, params[:starts_at], placeholder: "Start Date", class:"form-control starts" %>
			</div>
			<div class="col-md-4">
				<%= text_field_tag :ends_at, params[:ends_at], placeholder: "End Date", class:"form-control" %>
			</div>
			<div class="col-md-2">
				<%= submit_tag "Search", class:"btn btn-primary" %>
			</div>
		</div>
	</div>
<% end %>




